<!DOCTYPE html>
<html>
<head>
  <title>Personal Information</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding-top: 20px;
    }
    .form-section {
      max-width: 600px;
      margin: auto;
    }

    .navbar .nav-link {
  color: #212529 !important;
  font-weight: 500;
}

.navbar .nav-link:hover {
  color: #3f51b5 !important;
}

  </style>
</head>
<body>

<!-- ✅ Exact Navbar Match -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm w-100 z-3">
  <div class="container d-flex align-items-center justify-content-between">
    
    <!-- 🔗 Logo -->
    <a class="navbar-brand d-flex align-items-center me-3" href="/">
      <img src="/images/tashalogo.png" alt="Tasha Logo" height="150" width="200">
    </a>

    <!-- 🔍 Search Bar -->
<!-- 🔍 Search Bar -->
<!-- 🔍 Smart Search Form (Live Suggestions) -->
<form method="GET" action="/shop" class="d-none d-lg-flex flex-grow-1 me-4 position-relative" role="search" autocomplete="off">
  <input
    class="form-control rounded-pill px-3"
    name="search"
    type="search"
    placeholder="Search products..."
    id="searchInput"
    autocomplete="off"
    style="min-width: 300px;"
    value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
  />
  <ul class="list-group position-absolute w-100 shadow" id="suggestionBox" style="top: 100%; z-index: 1000;"></ul>
</form>




    <!-- ☰ Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- 🔗 Nav Links -->
    <ul class="navbar-nav gap-3 align-items-center">
      <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
      <li class="nav-item"><a class="nav-link" href="/about-us">About Us</a></li>
      <li class="nav-item"><a class="nav-link" href="/contact-us">Contact</a></li>

      <% if (role === "admin") { %>
        <li class="nav-item">
          <a class="nav-link fw-bold text-white px-3 py-2 rounded" href="/admin/dashboard" style="background-color: var(--primary-color);">
            Admin Dashboard
          </a>
        </li>
      <% } %>
      
      <!-- 👋 User Welcome Message -->
      <li class="nav-item">
        <% if (user) { %>
  <span class="user-welcome">Hi, <%= user.name %></span>
<% } %>

      </li>

      <!-- 🛒 Cart Icon -->
      <li class="nav-item">
        <a class="nav-link position-relative" href="/cart">
          <img src="/images/cart.png" alt="Cart" width="24" height="24">
          <% if (cartCount > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= cartCount %>
            </span>
          <% } %>
        </a>
      </li>

      <!-- 👤 User Dropdown -->
      <li class="nav-item dropdown user-dropdown">
        <a
          class="nav-link dropdown-toggle d-flex align-items-center"
          href="#"
          id="userDropdown"
          role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <img src="/images/human.png" alt="User" width="20" height="20" class="ms-1">
        </a>
        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
          <li><a class="dropdown-item" href="#">Account</a></li>
          <li><a class="dropdown-item" href="/account/personal-info">Personal Information</a></li>
          <li><a class="dropdown-item" href="/account/order">Order</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>

<!-- ✅ Form Section -->
<div class="container form-section">
  <h3 class="mb-4">Update Personal Information</h3>
  <form action="/account/personal-info" method="POST">
    <div class="mb-3">
      <label>Full Name</label>
      <input type="text" name="name" class="form-control" value="<%= info.name %>" required>
    </div>
    <div class="mb-3">
      <label>Email</label>
      <input type="email" name="email" class="form-control" value="<%= info.email %>" required>
    </div>
    <div class="mb-3">
      <label>Phone Number</label>
      <input type="text" name="phone" class="form-control" value="<%= info.phone || '' %>">
    </div>
    <button type="submit" class="btn btn-primary mb-4">Save</button>
  </form>

  <hr>
  <h4 class="mb-3">Saved Addresses</h4>

  <% if (addresses.length === 0) { %>
    <p class="text-muted">No addresses saved yet.</p>
  <% } else { %>
    <% addresses.forEach(address => { %>
      <div class="card mb-3">
        <div class="card-body">
          <p><%= address.address %>, <%= address.postcode %></p>
          <form action="/account/set-default-address" method="POST" class="d-inline">
            <input type="hidden" name="address_id" value="<%= address.id %>">
            <button type="submit" class="btn btn-sm <%= address.is_default ? 'btn-success disabled' : 'btn-outline-primary' %>">
              <%= address.is_default ? '✅ Default Address' : 'Set as Default' %>
            </button>
          </form>
          <a href="/account/delete-address/<%= address.id %>" class="btn btn-sm btn-outline-danger ms-2">Delete</a>
        </div>
      </div>
    <% }) %>
  <% } %>

  <hr>
  <h4 class="mb-3">Add New Address</h4>
  <form action="/account/add-address" method="POST">
    <div class="mb-3">
      <label>Address</label>
      <textarea name="address" class="form-control" rows="2" required></textarea>
    </div>
    <div class="mb-3">
      <label>Postcode</label>
      <input type="text" name="postcode" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-outline-primary">Add Address</button>
  </form>
</div>


<!-- ✅ Success Modal -->
<div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="feedbackModalLabel">Success</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        ✅ Your information was saved successfully!
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get("success") === "true") {
    const modal = new bootstrap.Modal(document.getElementById("feedbackModal"));
    modal.show();
  }
</script>

<%- include('partials/chatbot') %>
</body>
</html>