<!DOCTYPE html>
<html>
<head>
  <title>Reset Password - Tasha Enterprise</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
  <style>
    .form-hero {
      background: linear-gradient(135deg, #3f51b5, #1a237e);
      height: 100vh;
      position: relative;
    }
    .form-hero::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
    }
    .form-wrapper {
      position: relative;
      z-index: 2;
      max-width: 500px;
      margin: 100px auto 0 auto;
      background: rgba(255, 255, 255, 0.95);
      padding: 40px 30px;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(63, 81, 181, 0.4);
    }
    .form-wrapper h3 {
      font-size: 28px;
      font-weight: 700;
      text-align: center;
      color: #1a237e;
      margin-bottom: 30px;
    }
    .form-control {
      border-radius: 10px;
      padding: 12px 16px;
      font-size: 15px;
    }
    .btn-success {
      background-color: #3f51b5;
      border-radius: 10px;
      padding: 12px;
      font-size: 16px;
      font-weight: 500;
      transition: 0.3s ease;
      box-shadow: 0 0 10px rgba(63, 81, 181, 0.4);
    }
    .btn-success:hover {
      background-color: #3949ab;
    }
  </style>
</head>
<body>

<!-- ‚úÖ Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm position-fixed w-100 z-3">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/tashalogo.png" alt="Tasha Logo" height="150" width="200">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- üîê Reset Password Form -->
<section class="form-hero d-flex align-items-center">
  <div class="form-wrapper">
    <h3>Reset Your Password</h3>
    <form action="/reset-password" method="post">
      <input type="hidden" name="email" value="<%= email %>">
      <input name="otp" type="text" class="form-control mb-3" placeholder="Enter OTP" required>
      <input name="newPassword" type="password" class="form-control mb-4" placeholder="Enter New Password" required>
      <button type="submit" class="btn btn-success w-100">Reset Password</button>
    </form>
  </div>
</section>

<!-- ‚ùå OTP Error Modal -->
<div class="modal fade" id="otpErrorModal" tabindex="-1" aria-labelledby="otpErrorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border border-warning shadow">
      <div class="modal-header bg-warning-subtle text-warning">
        <h5 class="modal-title fw-semibold" id="otpErrorModalLabel">OTP Error</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        ‚ö†Ô∏è The OTP is invalid or has expired. Please try again.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- ‚úÖ Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border border-success shadow">
      <div class="modal-header bg-success-subtle text-success">
        <h5 class="modal-title fw-semibold" id="successModalLabel">Password Reset Successful</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        ‚úÖ Your password has been reset! <br>
        <a href="/login" class="btn btn-success mt-3">Go to Login</a>
      </div>
    </div>
  </div>
</div>

<script>
  const success = "<%= typeof success !== 'undefined' ? success : '' %>";
  if (success === "1") {
    const successModal = new bootstrap.Modal(document.getElementById("successModal"));
    successModal.show();
  }
</script>


<script>
  const otpError = "<%= otpError %>";
  if (otpError === "1") {
    const otpModal = new bootstrap.Modal(document.getElementById("otpErrorModal"));
    otpModal.show();
  }
</script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
