<!DOCTYPE html>
<html>
<head>
  <title>Your Orders - Tasha Enterprise</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding-top: 20px;
      background-color: #f8f9fa;
    }
    .order-card {
      margin-bottom: 30px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .card-header {
      font-weight: bold;
    }
    .badge-status {
      font-size: 0.9rem;
      padding: 5px 10px;
    }

    .navbar .nav-link {
  color: #212529 !important;
  font-weight: 500;
}

.navbar .nav-link:hover {
  color: #3f51b5 !important;
}
    
  </style>
</head>
<body>

<!-- ✅ Exact Navbar Match -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm w-100 z-3">
  <div class="container d-flex align-items-center justify-content-between">
    
    <!-- 🔗 Logo -->
    <a class="navbar-brand d-flex align-items-center me-3" href="/">
      <img src="/images/tashalogo.png" alt="Tasha Logo" height="150" width="200">
    </a>

    <!-- 🔍 Search Bar -->
<!-- 🔍 Search Bar -->
<!-- 🔍 Smart Search Form (Live Suggestions) -->
<form method="GET" action="/shop" class="d-none d-lg-flex flex-grow-1 me-4 position-relative" role="search" autocomplete="off">
  <input
    class="form-control rounded-pill px-3"
    name="search"
    type="search"
    placeholder="Search products..."
    id="searchInput"
    autocomplete="off"
    style="min-width: 300px;"
    value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
  />
  <ul class="list-group position-absolute w-100 shadow" id="suggestionBox" style="top: 100%; z-index: 1000;"></ul>
</form>




    <!-- ☰ Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- 🔗 Nav Links -->
    <ul class="navbar-nav gap-3 align-items-center">
      <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
      <li class="nav-item"><a class="nav-link" href="/about-us">About Us</a></li>
      <li class="nav-item"><a class="nav-link" href="/contact-us">Contact</a></li>

      <% if (role === "admin") { %>
        <li class="nav-item">
          <a class="nav-link fw-bold text-white px-3 py-2 rounded" href="/admin/dashboard" style="background-color: var(--primary-color);">
            Admin Dashboard
          </a>
        </li>
      <% } %>
      
      <!-- 👋 User Welcome Message -->
      <li class="nav-item">
        <% if (user) { %>
  <span class="user-welcome">Hi, <%= user.name %></span>
<% } %>

      </li>

      <!-- 🛒 Cart Icon -->
      <li class="nav-item">
        <a class="nav-link position-relative" href="/cart">
          <img src="/images/cart.png" alt="Cart" width="24" height="24">
          <% if (cartCount > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= cartCount %>
            </span>
          <% } %>
        </a>
      </li>

      <!-- 👤 User Dropdown -->
      <li class="nav-item dropdown user-dropdown">
        <a
          class="nav-link dropdown-toggle d-flex align-items-center"
          href="#"
          id="userDropdown"
          role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <img src="/images/human.png" alt="User" width="20" height="20" class="ms-1">
        </a>
        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
          <li><a class="dropdown-item" href="#">Account</a></li>
          <li><a class="dropdown-item" href="/account/personal-info">Personal Information</a></li>
          <li><a class="dropdown-item" href="/account/order">Order</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>

<!-- ✅ Orders Section -->
<div class="container">
  <h2 class="text-center mb-4">Your Orders</h2>

  <% if (orders.length === 0) { %>
    <p class="text-center text-muted">You have not placed any orders yet.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="card order-card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Order #: <%= order.order_number %></span>
          <span class="badge bg-info text-dark badge-status"><%= order.status %></span>
        </div>
        <div class="card-body">
          <p><strong>Placed On:</strong> 
            <%= new Date(order.created_at).toLocaleDateString("en-GB", { day: "numeric", month: "short", year: "numeric" }) %>
          </p>
          <p><strong>Total:</strong> RM<%= order.total.toFixed(2) %></p>
          <p><strong>Payment Method:</strong> <%= order.payment_method %></p>
          <p><strong>Delivery Address:</strong><br>
            <%= order.name %><br>
            <%= order.address %>, <%= order.postcode %><br>
            Phone: <%= order.phone %>
          </p>

          <% if (itemsMap[order.id]) { %>
            <div class="row">
              <% itemsMap[order.id].forEach(item => { %>
                <div class="col-md-4 mb-3 text-center">
                  <img src="<%= item.image_url %>" alt="<%= item.name %>" class="img-fluid" style="max-height: 120px;">
                  <p class="mt-2"><strong><%= item.name %></strong></p>
                  <p>Qty: <%= item.quantity %></p>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<!-- ✅ Success Modal -->
<div class="modal fade" id="orderSuccessModal" tabindex="-1" aria-labelledby="orderSuccessModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center border-success">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title w-100" id="orderSuccessModalLabel">
          ✅ Order Placed!
        </h5>
      </div>
      <div class="modal-body py-4">
        <img src="/images/success-tick.gif" width="100" alt="Success Tick" class="mb-3" />
        <p class="fs-5">Your order has been placed successfully.</p>
        <% if (orderNumber) { %>
          <p class="text-muted">Order Number: <strong><%= orderNumber %></strong></p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
  const params = new URLSearchParams(window.location.search);
  if (params.get("success") === "true") {
    const modal = new bootstrap.Modal(document.getElementById("orderSuccessModal"));
    modal.show();
  }
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
