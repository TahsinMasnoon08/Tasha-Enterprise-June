    <li><a class="dropdown-item" href="/category?group=kids&category=clothing">Clothing</a></li>
    <li><a class="dropdown-item" href="/category?group=kids&category=shoes">Shoes</a></li>
    <li><a class="dropdown-item" href="/category?group=kids&category=accessories">Accessories</a></li>
    <li><a class="dropdown-item" href="/category?group=kids&category=bag">Bags</a></li>
    <li><hr class="dropdown-divider"></li>
    <li><a class="dropdown-item text-primary" href="/category?group=kids">View All</a></li>
  </ul>
</div>



<!-- Featured Products -->
<% if (featuredProducts.length > 0) { %>
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center section-title">Featured Products</h2>
      <div class="row g-4">
        <% featuredProducts.forEach(product => { %>
          <div class="col-md-4">
            <div class="card product-card border-0 shadow-sm h-100">
              <div class="product-img-container">
                <img src="<%= product.image_url %>" class="card-img-top product-img" alt="Featured Product">
                <div class="position-absolute top-0 end-0 p-2">
                  <span class="badge badge-accent">Featured</span>
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title">
  <a href="/product/<%= product.id %>" class="text-decoration-none text-dark">
    <%= product.name %>
  </a>
</h5>

                <p class="card-text"><%= product.description %></p>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <% if (product.sale_price) { %>
  <span class="fw-bold text-danger fs-5">RM<%= product.sale_price %></span>
  <span class="text-muted text-decoration-line-through ms-2 text-danger fs-6">RM<%= product.price %></span>
<% } else { %>
  <span class="fw-bold fs-5">RM<%= product.price %></span>
<% } %>

                  <form action="/add-to-cart" method="POST">
  <input type="hidden" name="product_id" value="<%= product.id %>">
  
</form>

                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
<% } %>

  

